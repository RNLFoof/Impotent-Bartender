<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/btnOwned"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Owned Ingredients" />

        <Button
            android:id="@+id/btnPossible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Currently Possible Drinks" />

        <Button
            android:id="@+id/btnSuggest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Optimize New Ingredients" />

        <Button
            android:id="@+id/btnRaters"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rating Profiles" />

        <Button
            android:id="@+id/btnUpdate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Update Database" />

        <Button
            android:id="@+id/btnJsonList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="JSON List" />

        <RatingBar
            android:id="@+id/ratingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:max="5"
            android:numStars="5"
            android:stepSize="0.5" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>